<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MyPetMonitor.Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MyPetMonitor.Components.Layout.MainLayout)">
            <div class="text-center mt-5">
                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h3>Página no encontrada</h3>
                <p class="text-muted">Lo sentimos, no hay nada en esta dirección.</p>
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>
                    Volver al Dashboard
                </a>
            </div>
        </LayoutView>
    </NotFound>
</Router>
