@page "/settings"

<PageTitle>Configuración - My Pet Monitor</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>
                <i class="fas fa-cog"></i>
                Configuración
            </h2>
            <p class="text-muted">Configura las opciones del sistema y preferencias.</p>
